@model IEnumerable<PruebaGym2.Models.RutinaEjercicio>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/indexSocioRutina.css">

<h1 class="text-center" style="font-size: 60px; margin: 10px;">Administar rutina-ejercicio</h1>

<p class="text-center" style="margin-bottom: 80px">
    <a asp-action="Create" class="btn btn-primary" style="font-size: 20px">Crear una nueva relacion rutina-ejercicio</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rutina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ejercicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Sets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repeticiones)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rutina.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ejercicio.NombreEjercicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Repeticiones)
            </td>
            <td>
                    @Html.ActionLink("Editar", "Edit", new { idRutina = item.IdRutina, idEjercicio = item.IdEjercicio }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Detalles", "Details", new { idRutina = item.IdRutina, idEjercicio = item.IdEjercicio }, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Eliminar", "Delete", new { idRutina = item.IdRutina, idEjercicio = item.IdEjercicio }, new { @class = "btn btn-danger" })

            </td>
        </tr>
}
    </tbody>
</table>
