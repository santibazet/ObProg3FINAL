@model PruebaGym2.Models.RutinaEjercicio

@{
    ViewData["Title"] = "Create";
}

<div class="center">
    <div class="col-md-4 form-container">
        <h1 class="text-center">Asignar ejercicio a rutina</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdRutina" class="control-label"></label>
                <select asp-for="IdRutina" class="form-control" asp-items="ViewBag.IdRutina"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdEjercicio" class="control-label"></label>
                <select asp-for="IdEjercicio" class="form-control" asp-items="ViewBag.IdEjercicio"></select>
            </div>
            <div class="form-group">
                <label asp-for="Sets" class="control-label"></label>
                <input asp-for="Sets" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Repeticiones" class="control-label"></label>
                <input asp-for="Repeticiones" class="form-control" />
                <span asp-validation-for="Repeticiones" class="text-danger"></span>
            </div>
            <div class="form-group btn-center">
                <div class="btn-container">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn {
        border: none;
    }

    .center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 60vh; /* Ajusta la altura si es necesario */
    }

    .form-container {
        margin-bottom: 20px; /* Espaciado entre el formulario y los botones */
    }

    .btn-center {
        margin-top: 20px; /* Espaciado desde el borde superior */
    }

    .btn-container {
        display: flex;
        justify-content: center; /* Centra horizontalmente */
        align-items: center; /* Centra verticalmente */
    }

        .btn-container .btn {
            margin: 0 10px; /* Espacio entre los botones */
        }

    .btn-primary {
        background-color: #4CAF50; /* Verde */
    }

    .btn-secondary {
        background-color: #2196F3; /* Verde */
    }

    .btn-primary,
    .btn-secondary {
        transition: background-color 0.3s, box-shadow 0.3s, transform 0.3s;
        font-size: 18px;
    }

        .btn-primary:hover,
        .btn-secondary:hover {
            background-color: #333; /* Gris oscuro */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* Sombra al hacer hover */
            transform: scale(1.1);
        }

        .btn-primary:active,
        .btn-secondary:active {
            background-color: #555; /* Gris más oscuro al hacer clic */
        }

    .form-group input[type="text"],
    .form-group input[type="number"],
    .form-group select {
        transition: border-color 0.3s, box-shadow 0.3s; /* Agrega transición a los campos */
        border: 1px solid #ccc; /* Borde sólido gris */
        border-radius: 5px; /* Borde redondeado */
        padding: 5px 10px; /* Espaciado interno */
        width: 100%; /* Ancho completo */
    }

        .form-group input[type="text"]:hover,
        .form-group input[type="number"]:hover,
        .form-group select:hover {
            border-color: #333; /* Cambia el color del borde al hacer hover */
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); /* Agrega sombra al hacer hover */
        }

        .form-group input[type="text"]:focus,
        .form-group input[type="number"]:focus,
        .form-group select:focus {
            outline: none; /* Elimina el contorno de enfoque */
            border-color: #333; /* Cambia el color del borde cuando está enfocado */
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); /* Agrega sombra alrededor del campo cuando está enfocado */
        }

        /* Elimina el contorno azul predeterminado al hacer clic */
        .form-group input[type="text"]:focus,
        .form-group input[type="number"]:focus,
        .form-group select:focus,
        .form-group input[type="text"]:active,
        .form-group input[type="number"]:active,
        .form-group select:active {
            border-color: #333;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        }
</style>
