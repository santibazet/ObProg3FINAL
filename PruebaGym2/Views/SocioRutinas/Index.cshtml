@model IEnumerable<PruebaGym2.Models.SocioRutina>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/indexSocioRutina.css">

<h1 class="text-center" style="font-size: 60px; margin: 10px;">Administar socio-rutina</h1>

<p class="text-center" style="margin-bottom: 80px">
    <a asp-action="Create" class="btn btn-primary" style="font-size: 20px">Crear una nueva relacion socio-rutina</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Socio.NombreSocio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rutina.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calificacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Socio.NombreSocio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rutina.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calificacion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { idSocio = item.IdSocio, idRutina = item.IdRutina }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Detalles", "Details", new { idSocio = item.IdSocio, idRutina = item.IdRutina }, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Eliminar", "Delete", new { idSocio = item.IdSocio, idRutina = item.IdRutina }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
