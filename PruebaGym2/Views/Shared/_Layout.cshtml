<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Gestión gimnasios 24</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PruebaGym2.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
</head>
<style>
    body {
        font-family: 'Ubuntu', sans-serif;
    }

    .navbar-nav .nav-item {
        margin-right: 5px; /* Adjust spacing between nav items */
    }

    .navbar-brand img {
        max-width: 80px; /* Adjust the logo size */
        height: auto;
    }

    .navbar-nav .nav-link {
        font-size: 1.25rem; /* Increase font size */
        padding: 0.5rem 1rem; /* Adjust padding for larger clickable area */
    }

</style>
<body>
    <header>
        @if (ViewBag.ShowNavbar != false)
        {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/lolaNav.png" alt="Logo de un leopardo" class="img-fluid" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Locals" asp-action="Index">Locales</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Responsables" asp-action="Index">Responsables</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Ejercicios" asp-action="Index">Ejercicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Maquinas" asp-action="Index">Máquinas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="TipoMaquinas" asp-action="Index">Tipo de máquina</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Rutinas" asp-action="Index">Rutinas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Socios" asp-action="Index">Socios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="SocioRutinas" asp-action="Index">Calificar Socio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="RutinaEjercicios" asp-action="Index">Agregar ejercicio a rutina</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link" style="color: #ffc107;" asp-area="" asp-controller="Account" asp-action="Logout">Salir</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewBag.ShowFooter != false)
    {
    <footer class="border-top footer text-white bg-dark text-center">
        <div class="container">
           Obligatorio programacion 3 - Santiago Bazet, Branco Beltrán
        </div>
    </footer>
    }


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
