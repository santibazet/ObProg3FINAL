@model PruebaGym2.Models.Usuario

@{
    ViewData["Title"] = "Registro";
    ViewBag.ShowNavbar = false;
    ViewBag.ShowFooter = false;
}

<div class="background-dots"></div>

<div class="form-container">
    <div class="form-content">
        <h2 style="text-align: center; margin-bottom: 20px;">Registro</h2>
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="Nombre" class="form-label">Nombre de usuario</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contraseña" class="form-label">Contraseña</label>
                <input asp-for="Contraseña" type="password" class="form-control" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmarContraseña" class="form-label">Confirmar Contraseña</label>
                <input asp-for="ConfirmarContraseña" type="password" class="form-control" />
                <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrarse</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="error-message">@ViewBag.Error</div>
        }

        <div class="return-link">
            <a asp-action="Login" class="btn-return" style="color: #fff;">Volver al inicio de sesión</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #343a40; /* Color oscuro de fondo */
        overflow: hidden; /* Evita el scroll en la página */
        position: relative; /* Posición relativa para el contenido */
    }

    .background-dots {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
        background-image: radial-gradient(#ffc107 3%, transparent 3%); /* Partículas doradas */
        background-size: 30px 30px; /* Tamaño de las partículas */
        animation: moveDots 10s linear infinite; /* Animación de movimiento de partículas */
    }

    /* Estilos para el formulario */
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .form-content {
        max-width: 400px;
        width: 100%;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease; /* Transición para el efecto de movimiento */
    }

        .form-content:hover {
            transform: translateY(-5px); /* Efecto de levantar al hacer hover */
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-size: 18px;
        margin-bottom: 5px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:hover,
        .form-control:focus {
            border-color: #ffc107; /* Color dorado al hacer hover o enfocar */
            box-shadow: 0 0 5px rgba(255, 193, 7, 0.5); /* Sombra al hacer hover o enfocar */
        }

    .btn-primary {
        display: block;
        width: 100%;
        padding: 10px;
        font-size: 18px;
        background-color: #ffc107;
        border: none;
        border-radius: 5px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s, transform 0.3s;
        margin-bottom: 10px; /* Espaciado entre botones */
    }

        .btn-primary:hover {
            background-color: #ffbb33;
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
            transform: scale(1.05);
        }

    .btn-return {
        display: block;
        width: 100%;
        padding: 10px;
        font-size: 18px;
        background-color: #343a40; /* Color de fondo oscuro */
        border: none;
        border-radius: 5px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s, transform 0.3s;
        text-decoration: none; /* Quitar subrayado */
        text-align: center;
        display: block;
    }

        .btn-return:hover {
            background-color: #272b30; /* Color más oscuro al hacer hover */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            transform: scale(1.05);
        }

    .error-message {
        font-size: 16px;
        color: red;
        margin-top: 10px;
    }

    .return-link {
        text-align: center;
        margin-top: 20px; /* Mayor margen entre botones y texto */
    }
</style>