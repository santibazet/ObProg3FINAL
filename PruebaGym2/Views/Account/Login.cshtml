@{
    ViewData["Title"] = "Login";
    ViewBag.ShowNavbar = false;
    ViewBag.ShowFooter = false;
}


<div class="background-dots"></div>

<div class="form-container">
    <div class="form-content">
        <h2 style="text-align: center; margin-bottom: 20px;">Login</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="nombre" class="form-label">Nombre de usuario</label>
                <input type="text" class="form-control" id="nombre" name="nombre" required />
            </div>
            <div class="form-group">
                <label for="contraseña" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="contraseña" name="contraseña" required />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="error-message">@ViewBag.Error</div>
        }

        <p style="margin-top: 10px; text-align: center;">No tienes una cuenta? <a asp-action="Register">Regístrate aquí</a></p>
    </div>
</div>

<style>
    body {
        background-color: #343a40; /* Color oscuro de fondo */
        overflow: hidden; /* Evita el scroll en la página */
        position: relative; /* Posición relativa para el contenido */
    }

    .background-dots {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
        background-image: radial-gradient(#ffc107 3%, transparent 3%); /* Partículas doradas */
        background-size: 30px 30px; /* Tamaño de las partículas */
    }

    /* Estilos para el formulario */
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        overflow: hidden; /* Evita el scroll dentro del contenedor */
    }

    .form-content {
        max-width: 400px;
        width: 100%;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease; /* Transición para el efecto de movimiento */
    }

        .form-content:hover {
            transform: translateY(-5px); /* Efecto de levantar al hacer hover */
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-size: 18px;
        margin-bottom: 5px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s, box-shadow 0.3s; /* Transiciones */
    }

        .form-control:hover,
        .form-control:focus {
            border-color: #ffc107; /* Color dorado al hacer hover o enfocar */
            box-shadow: 0 0 5px rgba(255, 193, 7, 0.5); /* Sombra al hacer hover o enfocar */
        }

    .btn-primary {
        display: block;
        width: 100%;
        padding: 10px;
        font-size: 18px;
        background-color: #ffc107; /* Color dorado */
        border: none;
        border-radius: 5px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s, transform 0.3s; /* Transiciones */
    }

        .btn-primary:hover {
            background-color: #ffbb33; /* Color dorado más claro al hacer hover */
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.5); /* Sombra al hacer hover */
            transform: scale(1.05); /* Efecto de escala al hacer hover */
        }

    .error-message {
        font-size: 16px;
        color: red;
        margin-top: 10px;
    }
</style>
