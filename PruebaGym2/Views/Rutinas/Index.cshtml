@model IEnumerable<PruebaGym2.Models.Rutina>

@{
    ViewData["Title"] = "Rutinas";
}

<link rel="stylesheet" href="~/css/indexRutinas.css">


<h1 class="text-center" style="font-size: 60px; margin: 10px;">Administrar rutinas</h1>

<p class="text-center" style="margin-bottom: 15px">
    <a asp-action="Create" class="btn btn-primary" style="font-size: 20px">Crear una nueva rutina</a>
</p>

<p class="text-center" style="margin-bottom: 80px">
    <a asp-action="VerRutinasYEjercicios" class="btn btn-secondary" style="font-size: 20px">Ver Rutinas y Ejercicios</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoRutina)
            </th>
            <th>
                Calificación Promedio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoRutina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CalificacionPromedio)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdRutina" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdRutina" class="btn btn-secondary">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.IdRutina" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
